<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Compte</title>
    <style>
        * {
            border-collapse: collapse;
        }

        html, body {
            margin: 0;
            border: 0;
            padding: 0;
        }

        body{
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        header{
            display: flex;
            flex-direction: row;
            width: 100%;
            background-color: #000000;
        }

        header > a{
            padding: 10px;
            text-decoration: none;
            color: #FFFFFF;
        }

        #main {
            display: flex;
            flex-direction: row;
            justify-content: center;
            flex-wrap: wrap;
            width: 100%;
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: fit-content;
            margin: 10px;
        }

        form > input{
            width: 320px;
            height: 25px;
            padding-left: 10px;
            margin-bottom: 20px;
        }

        .bloc {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 300px;
            margin: 25px;
            padding: 0 20px;
            border: 1px solid #000000;
        }

        h3{
            margin: 0;
            color: #818181;
        }

        .blocBouton{
            display: flex;
            flex-direction: row;
            justify-content: space-evenly;
            align-items: center;
            width: 100%;
            margin: 20px 0;
        }

        .edit {
            background-color: #F2E3B3;
            width: 100px;
            padding: 1px 6px;
            height: 25px;
            margin: 0;
        }
    </style>
</head>
<body>
    <header id="header">
        <a href="/">Home</a>
        <a href="/inscription">Inscription</a>
        <a href="/connexion">Connexion</a>
    </header>
    <h1>Resultat Salle</h1>
    <div id="main">
        <% data.forEach((data) => { 
            if (data.nombresiege == siege) {
                if (!data.statut) { 
                    %>
                    <div class="bloc">
                        <h2>
                            <%= data.roomname %>
                        </h2>
                        <h3>
                            <%= data.roomsubname %>
                        </h3>
                        <p>
                            Nombre de tables : <%= data.nombretable %>
                        </p>
                        <p>
                            Nombre de sièges : <%= data.nombresiege %>
                        </p>
                        <p>
                            Nombre de sièges par table : <%= data.nombresiegetable %>
                        </p>
                        <div class="blocBouton">
                            <form action="/api/reservation/<%= data._id %>?_method=PUT" method="post">
                                <input type="hidden" name="_method" value="PUT">

                                <input type="submit" value="Réserver" class="edit">
                            </form>
                        </div>
                    </div>
                    <% 
                }
            }
        }) %>
    </div>
</body>
</html>